<% layout("/layouts/boilerplate") %> <%# this line is used to specify the layout file for this EJS template %>  <%# this is the body of entire page to show details of single listing %>
 <div class="row mt-3">
    <div class="col-8 offset-3 mb-3"> <%# Bootstrap classes to center the content %>
        <h3><%= listing.title %></h3>
    </div>                           <%# display listing details using Bootstrap card's %>
   <div class="card col-6 offset-3 show-card ">    
       <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing_image">
      <div class="card-body">        <%# this class is from Bootstrap to style the card body %>
         <p class="card-text">    
             <%= listing.description %><br/>      <%# display description %>
             &#8377;<%= listing.price.toLocaleString("en-IN") %><br/>  <%# display price with Indian Rupee symbol and formatted  by using toLocaleString %>
              <%= listing.location %> <br/>     <%# display location %>
              <%= listing.country %>   <%# display country %>
         </p>
      </div>
   </div>

        <br/>
        
        <div class="btns">  <%# buttons for editing and deleting the listing %>
             <a href="/listings/<%= listing._id %>/edit"
                 class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>   <%# button to edit the listing %>
       
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>   <%# button to delete the listing %>
            </form>
     </div>

     <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
     </div>
       
 </div>
